templ ThemeToggle() {
	<label class="swap swap-rotate btn btn-ghost">
		<input type="checkbox" class="theme-controller " value="light"/>
		@assets.SunIcon("swap-on fill-current")
		@assets.MoonIcon("swap-off fill-current")
	</label>
}

